import matplotlib.pyplot as plt
import numpy as np

# Generate x values from 0 to 10
x = np.linspace(0, 10, 100)  # 100 points for a smooth curve
y = x ** 2  # Square of x

# Create the plot
plt.figure(figsize=(8, 5))  # Set figure size
plt.plot(x, y, color="blue", linestyle="-", linewidth=2, label="y = x²")

# Customizing the plot
plt.title("Line Plot of y = x²", fontsize=14)  # Title
plt.xlabel("X Values", fontsize=12)  # X-axis label
plt.ylabel("Y Values (Squared)", fontsize=12)  # Y-axis label
plt.grid(True, linestyle="--", alpha=0.6)  # Add a grid with dashed lines
plt.legend()  # Show legend

# Display the plot
plt.show()
